<div class="container py-5 my-5">
  <div class="login-form">
    {% form 'customer_login' %}
      {% include 'form-error', form: form %}

      <h2>Login</h2>

      <label for="customer_email">Email Address</label>
      <input class="form-control" type="email" name="customer[email]"/>

      <label for="customer_password">Password</label>
      <input class="form-control" type="password" name="customer[password]"/>

      <input class="btn btn-primary btn-lg mt-3" type="submit" value="Sign In"/>

    {% endform %}

    {% form 'recover_customer_password' %}
      {% include 'form-error', form: form %}

      <h2 class="mt-5">Forgot Password</h2>

      <label for="customer_email">Email Address</label>
      <input class="form-control" type="email" name="email"/>

      <input class="btn btn-primary btn-lg mt-3" type="submit" value="Submit"/>

    {% endform %}

  </div>
</div>